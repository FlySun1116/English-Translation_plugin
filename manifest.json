{
  "manifest_version": 3,
  "name": "Sun Tech English Helper",
  "version": "4.1",
  "permissions": ["storage", "activeTab", "scripting"],

  
  "action": { "default_popup": "popup/popup.html" },
  "background": { "service_worker": "background.js" },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["styles.css"]
  }],
  "commands": {
    "lookup-word": { "suggested_key": { "default": "Alt+Q" }, "description": "快速查词" }
  }
}
